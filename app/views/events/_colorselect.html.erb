<%= form_for participant_group, url: participant_group_path(participant_group.id), method: :put do |f| %>
  <%= f.select( :group, options_for_select(ParticipantGroup::GROUPS.map { |m| [I18n.t("participant_groups.options.#{m.last}"), m.first.to_i, {'data-color' => m.last}] }, selected: participant_group.nil? ? '0' : participant_group.group), {}, { onchange: "this.form.submit()", class: 'colorselector', autocomplete: 'off' }) %>
<% end %>
