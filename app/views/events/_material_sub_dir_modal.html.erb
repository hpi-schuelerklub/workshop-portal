<div class="modal fade" id="material_sub_dir_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <%= form_tag(event_make_material_folder_path(@event), class:'form') do %>
        <%= hidden_field_tag "path", "", id: 'material_sub_dir_path' %>
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title"><%= t('.close_modal') %></h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= label_tag(:name, t('.name')) %>
              <%= text_field_tag(:name, '', class:'form-control') %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('.close_modal') %></button>
            <%= submit_tag(t('.submit'), class: 'btn btn-default') %>
          </div>
        </div><!-- /.modal-content -->
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

