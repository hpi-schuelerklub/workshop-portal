<%= form_for @request, :html => { :class => "form-horizontal request" } do |f| %>

  <%= render partial: "shared/error_message", locals: {entity: @request} %>

  <div class="form-group">
    <div class="btn-group col-lg-10 col-lg-offset-2" data-toggle="buttons">
      <% Request.form_of_addresses.keys.each do |key| %>
        <label class="btn btn-default <%= 'active' if @request.form_of_address == key %>">
          <%= f.radio_button :form_of_address, key %>
          <%= I18n.t :"requests.form_of_addresses.#{key}" %>
        </label>
      <% end %>
      <%=f.error_span(:form_of_address) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
      <%=f.error_span(:first_name) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
      <%=f.error_span(:last_name) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone_number, :class => 'form-control' %>
      <%=f.error_span(:phone_number) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
      <%=f.error_span(:address) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
      <%=f.error_span(:email) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :topic_of_workshop, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :topic_of_workshop, :class => 'form-control', :placeholder => I18n.t('requests.hints.please_enter_two_topics')%>
      <%=f.error_span(:topic_of_workshop) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time_period, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :time_period, :class => 'form-control' %>
      <%=f.error_span(:time_period) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :number_of_participants, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number_of_participants, :class => 'form-control' %>
      <%=f.error_span(:number_of_participants) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :knowledge_level, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :knowledge_level, :class => 'form-control' %>
      <%=f.error_span(:knowledge_level) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :annotations, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :annotations, :class => 'form-control', :placeholder => I18n.t('activerecord.attributes.request.annotations') %>
      <%= f.error_span(:annotations) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                requests_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
